<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="bitcamp.java93.dao.MemberDao">
  
  <resultMap type="member" id="memberMap">
    <id column="mno" property="no"/>
    <result column="name" property="name"/>
    <result column="nick" property="nickName"/>
    <result column="phone" property="phone"/>
    <result column="pwd" property="password"/>
    <result column="email" property="email"/>
    <result column="path" property="photo"/>
  </resultMap>

  <sql id="select1">
    select mno, nick, name, phone, email 
    from memb
  </sql>

  <select id="selectList" resultMap="memberMap">
    <include refid="select1"/>
    order by name asc 
  </select>
  
  <insert id="insert" parameterType="member" 
          useGeneratedKeys="true" keyColumn="mno" keyProperty="no">
    insert into memb(name,phone,pwd,nick,email) 
    values(#{name},#{phone},password(#{password}),#{nickName},#{email})
  </insert>
  
  <select id="selectOneByEmailPassword" resultMap="memberMap" parameterType="map">
    select  m.email, m.mno, m.name, m.nick, m.phone
    from memb m
    where email=#{email} and pwd=password(#{password})
  </select>
  
  

</mapper>




